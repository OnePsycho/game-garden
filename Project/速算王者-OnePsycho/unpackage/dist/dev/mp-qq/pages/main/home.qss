@import '../../common/main.qss';

.page {
  height: 100vh;
  position: relative;
  padding-bottom: 150rpx;
  font-family: 'myFont';
  font-weight: 200;
}
.page .calc-header {
  position: relative;
  width: 100%;
  height: 60px;
  padding: 18px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  border-bottom: 1px solid #e0e0e0;
}
.page .calc-header-right {
  font-size: 28px;
}
.page .calc-header .progress {
  position: absolute;
  left: 0;
  bottom: -3px;
  height: 3px;
  width: 100%;
  background: #333333;
}
.page .calc-header image {
  width: 20px;
}
.page .calc-content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-top: 100rpx;
  color: #585858;
}
.page .calc-content-question {
  font-size: 40px;
}
.page .calc-content-question ._span {
  margin: 0 20rpx;
}
.page .calc-content-answer {
  margin-top: 60rpx;
}
.page .calc-content-answer input {
  background: #e6e6e6;
  width: 60%;
  margin-left: 20%;
  height: 140rpx;
  line-height: 100rpx;
  font-size: 42px;
  padding: 10rpx;
  color: #000;
  text-align: center;
  letter-spacing: 1px;
}
.page .calc-box {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.page .calc-box-item {
  -webkit-box-flex: 1;
  -webkit-flex: 1 1 33.33%;
          flex: 1 1 33.33%;
  height: 180rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 30px;
  color: #585858;
  border: 0.5px solid #e0e0e0;
  margin: -0.5px;
}
.page .cu-bar button {
  padding: 0;
  border: none;
  border-radius: 0;
  height: 19px;
  font-size: 14px;
  color: #666;
  background: none;
  font-family: 'myFont';
  line-height: normal;
}
.page .cu-bar button::after {
  border: none;
  border-color: #d1d1d1;
  border-radius: 0;
}

